<%= search_form_for(@query, url: store_search_bar_path(store_id: @store.id), method: :get, class:'d-flex') do |f| %>
  <%= f.search_field :name_or_author_i_cont_any,
    placeholder: "Search Books...",
    class: "form-control me-2" %>
  <%= f.submit "Search!", class: "btn btn-outline-success" %>
<% end %>