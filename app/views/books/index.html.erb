<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">
  <% @books.each do |book| %>
    <%= render book %>
    <p>
      <%= link_to "#{book.name}", store_book_path(id: book.id) %>
    </p>
  <% end %>
</div>

<%= link_to "New book", new_store_book_path %>
<%= link_to "Back to stores", stores_path %>
